.publish-container {
  height: 100vh;
  background: var(--themeColor);
}
.publish-title {
  font-size: 50rpx;
  padding-left: 20rpx;
}
.publish-title text {
  font-size: 42rpx;
}
.publish-wrap {
  width: 100vw;
  display: flex;
  flex-direction: column;
  color: #07a9f5;
  height: calc(100vh - 100rpx);
}
input {
  padding-top: 10rpx;
  color: #000;
  border-bottom: 3rpx solid #000;
}
.input-box {
  margin-bottom: 20rpx;
}
.input-box view {
  width: 60%;
  display: flex;
  justify-content: space-between;
}
.input-box view text:first-child {
  font-size: 30rpx;
}
.input-box view text:last-child {
  font-size: 24rpx;
  color: #f00;
}
.input-box view text:last-child:before {
  content: "*";
}
.publish-top {
  width: 100%;
  display: flex;
  margin-bottom: 20rpx;
}
.uploader-cell {
  width: 370rpx;
  height: 250rpx;
  margin: 10rpx 20rpx;
  position: relative;
}
.uploader-item {
  width: 330rpx;
  height: 250rpx;
  border-radius: 10rpx;
  position: relative;
}
.uploader-item icon {
  position: absolute;
  padding: 5rpx;
  right: -10rpx;
  top: -10rpx;
  background: #f4f4f4;
  border-radius: 50%;
}
.uploader-item image {
  width: inherit;
  height: inherit;
  border-radius: 10rpx;
}
.uploader {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  border: 5rpx solid #464444;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 36rpx;
  color: #464444;
}
.publish-info {
  display: flex;
  flex-direction: column;
  justify-content: center;
  width: calc(100vw - 300rpx);
  padding-right: 30rpx;
}
.publish-info .input-box {
  margin-bottom: 20rpx;
}
.publish-info .radio-title {
  margin-bottom: 10rpx;
}
.publish-info .radio-box {
  display: flex;
}
.publish-info .radio-box .radio {
  margin-right: 20rpx;
  color: #000;
}
.publish-main {
  width: 100vw;
  height: 860rpx;
  flex: 1;
  margin-bottom: 20rpx;
  padding: 0 30rpx;
}
.date-choose {
  width: 60%;
}
.date-choose .picker {
  margin: 10rpx 0;
  border: 3rpx solid #000;
  padding: 5rpx;
  font-size: 28rpx;
  color: #646262;
}
.date-choose .picker text {
  color: #000;
}
.publish-detail {
  width: 100%;
  height: 400rpx;
}
.publish-detail view {
  margin-bottom: 10rpx;
}
.publish-detail textarea {
  width: 100%;
  height: 100%;
  border: 3rpx solid #000;
  color: #000;
}
.publish-detail .p-detail-no {
  padding-left: 140rpx;
  font-size: 24rpx;
  color: #f00;
}
.publish-btn {
  width: 100%;
  height: 220rpx;
  display: flex;
  justify-content: center;
}
.publish-btn button {
  width: 150rpx;
  height: 80rpx;
  margin: 0 20rpx;
  background: #03e9f4;
  border: none;
  box-shadow: 0 0 5px #03e9f4, 0 0 20px #03e9f4;
  color: #fff;
  font-size: 32rpx;
}
.bottom {
  position: absolute;
  width: 100%;
  bottom: 50rpx;
  display: flex;
  z-index: 1000;
  justify-content: center;
  align-items: center;
  flex-wrap: wrap;
  height: 210rpx;
}
.bottom button {
  font-size: 27rpx;
  z-index: 2;
  padding: 0 20rpx;
  height: 60rpx;
  min-width: 70rpx;
  margin: 0 10rpx;
}
